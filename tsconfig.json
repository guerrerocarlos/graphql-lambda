{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "pretty": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}